{
  "name": "wiredoor-app",
  "version": "1.0.0",
  "description": "An easy way to run and manage WireGuard from Web UI and optionally expose corporate services",
  "main": "src/main.js",
  "scripts": {
    "build": "tsc -p tsconfig.json",
    "dev": "nodemon",
    "lint": "eslint src/**/*.ts",
    "migration:create": "typeorm migration:create ",
    "migration:generate": "typeorm migration:generate ./src/database/migrations -d ./src/providers/db.ts",
    "migration:run": "typeorm migration:run -d ./src/providers/db.ts",
    "migration:revert": "typeorm migration:run -- -d ./src/providers/db.ts",
    "test": "jest --runInBand --detectOpenHandles",
    "typeorm": "dotenv -e .env -- typeorm-ts-node-commonjs"
  },
  "nodemonConfig": {
    "delay": 2500,
    "exec": "ts-node --transpile-only ./src/main.ts",
    "ext": "js,ts,json",
    "ignore": [
      "src/**/*.spec.ts",
      "src/**/*.stub.ts",
      "src/public/*"
    ],
    "watch": [
      "src"
    ]
  },
  "keywords": [
    "wiredoor",
    "wireguard",
    "nginx",
    "proxy",
    "vpn"
  ],
  "author": "Daniel Mesa",
  "license": "MIT",
  "devDependencies": {
    "@babel/preset-typescript": "^7.25.7",
    "@eslint/js": "^9.24.0",
    "@faker-js/faker": "^9.0.3",
    "@jest/globals": "^29.7.0",
    "@types/body-parser": "^1.19.5",
    "@types/compression": "^1.7.5",
    "@types/express": "^4.17.21",
    "@types/jest": "^29.5.14",
    "@types/multer": "^1.4.12",
    "@types/node": "^22.13.14",
    "@types/pino": "^7.0.4",
    "@types/pino-http": "^5.8.4",
    "@typescript-eslint/eslint-plugin": "^8.29.0",
    "@typescript-eslint/parser": "^8.29.0",
    "dotenv": "^16.4.5",
    "eslint": "^9.24.0",
    "eslint-config-prettier": "^9.1.0",
    "eslint-plugin-prettier": "^5.2.1",
    "jest": "^29.7.0",
    "nodemon": "^3.1.4",
    "pino-pretty": "^13.0.0",
    "prettier": "^3.3.3",
    "supertest": "^7.0.0",
    "ts-jest": "^29.2.5",
    "ts-node": "^10.9.2",
    "typescript": "^5.8.3",
    "typescript-eslint": "^8.29.1"
  },
  "dependencies": {
    "axios": "^1.7.7",
    "bcrypt": "^5.1.1",
    "body-parser": "^1.20.3",
    "celebrate": "^15.0.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.1",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "express": "^4.19.2",
    "express-rate-limit": "^7.4.0",
    "joi": "^17.13.3",
    "jsonwebtoken": "^9.0.2",
    "multer": "^1.4.5-lts.1",
    "mysql": "^2.18.1",
    "pino": "^9.6.0",
    "pino-http": "^10.4.0",
    "reflect-metadata": "^0.2.2",
    "routing-controllers": "^0.10.4",
    "sqlite3": "^5.1.7",
    "typedi": "^0.10.0",
    "typeorm": "^0.3.20"
  },
  "overrides": {
    "cookie": "0.7.0",
    "cross-spawn": "7.0.5"
  }
}
